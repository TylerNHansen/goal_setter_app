<h1 id="username">Hi, <%= @user.username %>!</h1>

<h3><%= link_to "#{@user.to_s.capitalize}'s Goals", user_goals_url(@user) %></h3>

<h3>Comments</h3>
<% @user.comments.each do |comment| %>
  <%= render partial: 'comments/comment', locals: { comment: comment, object: @user, current_user: current_user } %>
<% end %>
<hr>
<h3>Add a Comment</h3>
<%= render partial: 'comments/form', locals: { comment: Comment.new, object: @user } %>
